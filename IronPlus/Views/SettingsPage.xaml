<?xml version="1.0" encoding="UTF-8" ?>
<local:BasePage
    x:Class="IronPlus.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:IronPlus.Controls"
    xmlns:local="clr-namespace:IronPlus.Views"
    xmlns:vm="clr-namespace:IronPlus.ViewModels"
    x:DataType="vm:SettingsViewModel">
    <local:BasePage.BaseContent>
        <Grid RowDefinitions="*, Auto">
            <CollectionView ItemsSource="{Binding SettingsList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:SettingsModel">
                        <StackLayout>
                            <Grid 
                                Margin="12"
                                ColumnSpacing="16"
                                ColumnDefinitions="*,10*"
                                VerticalOptions="Center">
                                <Label
                                    FontFamily="{StaticResource FontAwesome}"
                                    FontSize="24"
                                    Text="{Binding Icon}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"/>
                                <Label
                                    Grid.Column="1"
                                    Style="{StaticResource HeaderLabelStyle}"
                                    Text="{Binding Title}"
                                    VerticalOptions="Center" />

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Command}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                            <controls:Divider />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label
                Grid.Row="1"
                Margin="24"
                TextColor="{AppThemeBinding Dark={StaticResource NeutralDark}, Light={StaticResource NeutralLight}}"
                Style="{DynamicResource BodyLabelStyle}"
                Text="{Binding Version}"
                HorizontalOptions="End"
                VerticalOptions="End" />
        </Grid>
    </local:BasePage.BaseContent>
</local:BasePage>
