<?xml version="1.0" encoding="UTF-8" ?>
<local:BasePage
    x:Class="IronPlus.Views.HowToUseUnitConversionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:IronPlus.Controls"
    xmlns:local="clr-namespace:IronPlus.Views"
    xmlns:vm="clr-namespace:IronPlus.ViewModels"
    x:DataType="vm:HowToUseUnitConversionViewModel">
    <local:BasePage.BaseContent>
        <ScrollView VerticalOptions="StartAndExpand">
            <StackLayout
                Padding="24"
                Spacing="16"
                VerticalOptions="Center">

                <Label Style="{DynamicResource HeaderLabelStyle}" Text="{Binding GenerateNewConversionLabel}" />
                <StackLayout BindableLayout.ItemsSource="{Binding GenerateNewConversionSteps}" BindableLayout.ItemTemplate="{StaticResource InstructionsDataTemplate}"/>
                <Label Style="{DynamicResource BodyLabelStyle}" Text="{Binding AutoGeneratedLabel}" />

                <controls:Divider Inset="-24" />

                <Label Style="{DynamicResource HeaderLabelStyle}" Text="{Binding AddCustomBarbellLabel}" />
                <StackLayout BindableLayout.ItemsSource="{Binding AddCustomBarbellSteps}" BindableLayout.ItemTemplate="{StaticResource InstructionsDataTemplate}"/>

                <controls:Divider Inset="-24" />

                <Label Style="{DynamicResource BodyLabelStyle}" Text="{Binding ChangeRoundSettingLabel}" />
            </StackLayout>
        </ScrollView>
    </local:BasePage.BaseContent>

</local:BasePage>
