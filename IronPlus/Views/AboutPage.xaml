<?xml version="1.0" encoding="UTF-8" ?>
<local:BasePage
    x:Class="IronPlus.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:IronPlus.Helpers"
    xmlns:local="clr-namespace:IronPlus.Views"
    xmlns:vm="clr-namespace:IronPlus.ViewModels"
    x:DataType="vm:AboutViewModel">
    <local:BasePage.BaseContent>
        <StackLayout
            Margin="24"
            Spacing="16"
            VerticalOptions="FillAndExpand">
            <Label Style="{DynamicResource HeaderLabelStyle}" Text="{Binding Header1}" />
            <Label Style="{DynamicResource BodyLabelStyle}" Text="{Binding Body1}" FontSize="18"/>
            <ImageButton
                BackgroundColor="Transparent"
                Command="{Binding GoToInstagramCommand}"
                VerticalOptions="EndAndExpand">
                <ImageButton.Source>

                    <FontImageSource
                        FontFamily="{StaticResource FontAwesomeBrand}"
                        Glyph="{x:Static helpers:FAIcons.InstagramLogo}"
                        Color="{AppThemeBinding Light={StaticResource OnBackgroundLight},
                                                Dark={StaticResource OnBackgroundDark}}" />
                </ImageButton.Source>
            </ImageButton>
        </StackLayout>
    </local:BasePage.BaseContent>
</local:BasePage>
