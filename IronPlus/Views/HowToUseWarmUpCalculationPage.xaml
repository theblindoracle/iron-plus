<?xml version="1.0" encoding="UTF-8" ?>
<local:BasePage
    x:Class="IronPlus.Views.HowToUseWarmUpCalculationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:IronPlus.Controls"
    xmlns:local="clr-namespace:IronPlus.Views"
    xmlns:vm="clr-namespace:IronPlus.ViewModels"
    x:DataType="vm:HowToUseWarmUpCalculationViewModel">
    <local:BasePage.BaseContent>
        <ScrollView VerticalOptions="StartAndExpand">

            <StackLayout
                Padding="24"
                Spacing="16"
                VerticalOptions="Center">

                <Label Style="{DynamicResource HeaderLabelStyle}" Text="{Binding GenerateWarmUpWeightsLabel}" />
                <StackLayout BindableLayout.ItemsSource="{Binding GenerateWarmUpWeightsSteps}" BindableLayout.ItemTemplate="{StaticResource InstructionsDataTemplate}"/>
                <Label Style="{DynamicResource BodyLabelStyle}" Text="{Binding AutoGeneratedLabel}" />


                <controls:Divider Inset="-24" />
                <Label Style="{DynamicResource BodyLabelStyle}" Text="{Binding SpecificWeightLabel}" />

            </StackLayout>

        </ScrollView>
    </local:BasePage.BaseContent>
</local:BasePage>
