<?xml version="1.0" encoding="UTF-8" ?>
<local:BasePage
    x:Class="IronPlus.Views.HowToUseRpeChartPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:IronPlus.Controls"
    xmlns:local="clr-namespace:IronPlus.Views"
    xmlns:vm="clr-namespace:IronPlus.ViewModels"
    x:DataType="vm:HowToUseRpeChartViewModel">
    <local:BasePage.BaseContent>
        <ScrollView VerticalOptions="StartAndExpand">
            <StackLayout Padding="24" Spacing="16">
                <Label Style="{DynamicResource HeaderLabelStyle}" Text="{Binding GenerateNewChartLabel}" />

                <Label Style="{DynamicResource Header2LabelStyle}" Text="Completed Set" />
                <Label Style="{DynamicResource BodyLabelStyle}" Text="This should be a weight you have recently completed. (e.g. 600 for 1 rep at RPE 9)" Margin="0,-8,0,0" TextColor="{AppThemeBinding Dark={StaticResource NeutralDark}, Light={StaticResource NeutralLight}}"/>
                <StackLayout BindableLayout.ItemsSource="{Binding GenerateNewChartSteps}" BindableLayout.ItemTemplate="{StaticResource InstructionsDataTemplate}"/>

                <Label Style="{DynamicResource Header2LabelStyle}" Text="Target Set"  />
                <Label Style="{DynamicResource BodyLabelStyle}" Text="This should be the prescribed set that you are looking for. (e.g. 5 reps at RPE 8)" Margin="0,-8,0,0" TextColor="{AppThemeBinding Dark={StaticResource NeutralDark}, Light={StaticResource NeutralLight}}"/>
                <StackLayout BindableLayout.ItemsSource="{Binding ChangeChartRepsList}" BindableLayout.ItemTemplate="{StaticResource InstructionsDataTemplate}"/>

                <Label Style="{DynamicResource BodyLabelStyle}" Text="Projected Weight will update any time a value is changed."  />

                <controls:Divider Inset="-24" />

                <Label Style="{DynamicResource BodyLabelStyle}" Text="{Binding ChangeRoundingValueLabel}" />

            </StackLayout>
        </ScrollView>
    </local:BasePage.BaseContent>
</local:BasePage>
