<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IronPlus.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:helpers="clr-namespace:IronPlus.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:IronPlus.Views"
    Title="IronPlus"
    mc:Ignorable="d">
    <!--
        Styles and Resources
    -->
    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="{x:AppThemeBinding Dark={StaticResource NavigationPrimaryDark}, Light={StaticResource NavigationPrimaryLight}}" />
                <Setter Property="Shell.ForegroundColor" Value="{x:AppThemeBinding Dark={StaticResource OnNavigationPrimaryDark}, Light={StaticResource OnNavigationPrimaryLight}}" />
                <Setter Property="Shell.TitleColor" Value="{x:AppThemeBinding Dark={StaticResource OnNavigationPrimaryDark}, Light={StaticResource OnNavigationPrimaryLight}}" />
                <Setter Property="Shell.UnselectedColor" Value="{x:AppThemeBinding Dark={StaticResource OnNavigationPrimaryUnselectedDark}, Light={StaticResource OnNavigationPrimaryUnselectedLight}}" />
                <Setter Property="Shell.NavBarHasShadow" Value="False" />
            </Style>
            <Style BasedOn="{StaticResource BaseStyle}" TargetType="TabBar">
                <Setter Property="Shell.TabBarTitleColor" Value="{x:AppThemeBinding Dark={StaticResource PrimaryDark}, Light={StaticResource OnNavigationPrimaryLight}}" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="{x:AppThemeBinding Dark={StaticResource OnNavigationPrimaryUnselectedDark}, Light={StaticResource OnNavigationPrimaryUnselectedLight}}" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>


    <!--  Your Pages  -->
    <TabBar>
        <Tab Title="RPE" Route="rpeChart">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}" Glyph="{x:Static helpers:FAIcons.Calculator}" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{x:DataTemplate views:RpeChartCalculationPage}" />
        </Tab>
        <Tab Title="Converter" Route="unitConverter">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}" Glyph="{x:Static helpers:FAIcons.Converter}" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{x:DataTemplate views:UnitConversionPage}" />
        </Tab>
        <Tab Title="Warm Up" Route="warmUp">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}" Glyph="{x:Static helpers:FAIcons.WarmUp}" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{x:DataTemplate views:WarmUpCalculationPage}" />
        </Tab>
        <Tab Title="Settings" Route="settings">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}" Glyph="{x:Static helpers:FAIcons.Cog}" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{x:DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>