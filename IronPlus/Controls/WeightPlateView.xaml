<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="IronPlus.Controls.WeightPlateView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IronPlus.Controls"
    x:Name="this">
    <ContentView.Content>
        <Grid ColumnDefinitions="Auto,*">
            <Frame
                Grid.ColumnSpan="2"
                Padding="0"
                BackgroundColor="Silver"
                BorderColor="Black"
                CornerRadius="5"
                HasShadow="False"
                HeightRequest="30"
                VerticalOptions="CenterAndExpand" />
            <Frame
                Margin="0,0,4,0"
                Padding="0"
                BackgroundColor="Silver"
                BorderColor="Black"
                CornerRadius="5"
                HasShadow="False"
                HeightRequest="40"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                WidthRequest="40">
                <Label
                    x:Name="barbellWeightLabel"
                    HorizontalOptions="Center"
                    Style="{StaticResource BaseLabelStyle}"
                    Text="{Binding BarbellWeight, Source={x:Reference this}}"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </Frame>

            <Grid
                x:Name="grid"
                Grid.Column="1"
                ColumnSpacing="4"/>
        </Grid>
    </ContentView.Content>
</ContentView>
